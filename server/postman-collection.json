      ]
    },
    {
      "name": "Catálogos",
      "item": [
        {
          "name": "Obtener Importadores",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/catalogs/importers?status=ACTIVO",
              "host": ["{{base_url}}"],
              "path": ["catalogs", "importers"],
              "query": [
                {
                  "key": "status",
                  "value": "ACTIVO"
                }
              ]
            },
            "description": "Obtener lista de importadores activos"
          }
        },
        {
          "name": "Obtener Exportadores",
          "request": {
            "method": "GET",
            "header": [
